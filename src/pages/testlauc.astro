import backgroundlol from '~/layouts/background-lol.astro';

import { headerData } from '~/data';

const meta = {
  title: "Saas Landing Page",
  description: "ITE.description",
  dontUseTitleTemplate: true,
};

---

<Layout {meta}>
  
  

    
  <div id="intro" class="bg-image shadow-2-strong img-fluid ">
    <div class="mask" style="background-color: rgba(0, 0, 0, 0.8);">
      <div class="container d-flex align-items-center justify-content-center text-center h-100">
        <div id="opacc" class= "bg-image">
        <Hero
  
        callToAction={{ text: 'Demande de Soumission', href: 'landing/nous-joindre', icon: 'tabler:check' }}
        callToAction2={{ text: 'En savoir plus', href: '#features' }}
    
      >
      
        <Fragment slot="title">
          Une equipe professionelle <span class="hidden lg:inline">avec un climat familial: <br class="2xl:hidden"/> </span> 
          <span > </span> <div class="text-accent dark:text-white highlight">Gestion&nbsp;Laucandrique</div>
        </Fragment>
    
        <Fragment slot="subtitle">
          <span class="hidden sm:inline">
            <span class="font-semibold">Gestion Laucandrique</span> a plus de 35 ans d'experience dans le domaine de la gestion de coproprietes.</span>
          <span class="block mb-1 sm:hidden font-bold text-blue-600">Gestion Laucandrique:</span> La reference en matiere de gestion immobiliere peu importe la taille de votre coproprietes.
        </Fragment>
      </Hero>  
    </div>



        
        </div>
      </div>
    </div>
  </div>





</Layout>




