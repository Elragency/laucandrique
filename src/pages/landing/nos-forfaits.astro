<style media="screen">

  
.Fullbody {
  display: flex;
  justify-content: center;
  margin: auto;
  height: auto;

}

.Sectionp {
  display: flex;
  margin-bottom: 308px;
  margin-top: 5px;
  height: auto;

}



.body {
  display: flex;
  justify-content: ;
  margin: auto;
  height: 200px;

}
.title {
    text-align: center !important;
    font-weight: bold;
    color: white;
    align-items: center;
}

.container {
  position: relative;
  border-radius: 16px;
  padding: 0px;
  box-shadow: 10px 10px 15px rgba(0,0,0,0.05);
  align-items: center;
  justify-content: center;

}

.wrapper header{
  height: 55px;
  display: flex;
  align-items: center;
  border: 1px solid #ccc;
  border-radius: 30px;
  position: relative;
}
header label{
  height: 100%;
  z-index: 2;
  width: 30%;
  display: flex;
  cursor: pointer;
  font-size: 18px;
  position: relative;
  align-items: center;
  justify-content: center;
  transition: color 0.3s ease;
}


.wrapper input[type="radio"]{
  display: none;
  
}


.card{
  display: flex;
  width: 300%;
  height: auto;
  overflow: hidden;

  
}


.row .price-details{
  margin: 20px 0;
  text-align: center;
  padding-bottom: 25px;
  border-bottom: 1px solid #e6e6e6;
  color: white;
}
.price-details .price{
  font-size: 65px;
  font-weight: 600;
  position: relative;
}
.price-details .price::before,
.price-details .price::after{
  position: absolute;
  font-weight: 400;
}
.price-details .price::before{
  content: "$";
  left: -13px;
  top: 17px;
  font-size: 20px;
}
.price-details .price::after{
  content: "/mon";
  right: -33px;
  bottom: 17px;
  font-size: 13px;
}
.price-details p{
  font-size: 18px;
  margin-top: 5px;
}
.row .features li{
  display: flex;
  font-size: 15px;
  list-style: none;
  margin-bottom: 10px;
  align-items: center;
}
.features li i{
  background: linear-gradient(#00ff04 0%, #1e40af 100%);
  background-clip: text;
 -webkit-background-clip: text;
 -webkit-text-fill-color: transparent;
 margin-left: 15px;
}
.features li span{
  margin-left: 10px;
  margin-right: 15px;
  color: #fff;
}
.container button{
  width: 90%;
  border-radius: 15px;
  border: none;
  outline: none;
  height: 50px;
  font-size: 18px;
  color: #fff;
  cursor: pointer;
  margin-top: 20px;
  margin-bottom: 10px;
  margin-left: 15px;
  margin-right: 5px;
  text-align: center;
  background: linear-gradient(145deg, #1e40af 0%, #1e40af 100%);
  transition: transform 0.3s ease;
}
.container button:hover{
  transform: scale(0.98);
}



</style>
